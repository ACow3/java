package com.codingdojo.familiar;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;

@RestController
public class DojoController {

	@RequestMapping("/m/{dojo}")
	public String heyDojo(@PathVariable("dojo") String dojo){
		return "The dojo is awesome!";
	}

	@RequestMapping("/m/{location}-dojo")
	public String showDojo(@PathVariable("location") String location){
		return "Burbank Dojo is located in Southern California.";
	}

	@RequestMapping("/m/{hq}")
	public String hq(@PathVariable("hq") String hq){
		return "SJ dojo is the headquarters";
	}
	
}